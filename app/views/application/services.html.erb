<script type="text/javascript">
  /* activate sidebar */
  $('#sidebar').affix({
    offset: {
      top: 235
    }
  });

  /* activate scrollspy menu */
  var $body   = $(document.body);
  var navHeight = $('.navbar').outerHeight(true) + 10;

  $body.scrollspy({
    target: '#leftCol',
    offset: navHeight
  });

  $(document).ready(function ($) {
    $('.nav li').removeClass('active');
    $('#offer_menu').addClass('active');

    $('#sidebar a').click(function () {
      var target = $(this.hash);
      target = target.length ? target : $('[name=' + this.hash.substr(1) + ']');
      if (target.length) {
          $('html,body').animate({
              scrollTop: target.offset().top - 120
          }, 1000);
          return false;
      }
    });
  });

  $(window).scroll(function () {
    var distanceFromTop = $("#leftCol").offset().top - $(window).scrollTop();
    if (distanceFromTop < 100 && $(window).width() > 900) {
        $("#sidebar").addClass("affix");
        $("#sidebar").css("top", "90px");
    }

    var distanceFromTop2 = $("#leftCol").offset().top - $(window).scrollTop();
    var distanceFromTop4 = $(".lastHead").offset().top - $(window).scrollTop();

    if (distanceFromTop2 > 100) {
      $("#sidebar").removeClass("affix");
    }

    if (distanceFromTop4 < 100) {
      $("#sidebar").css("top", distanceFromTop4);
    }

    $(".services-headers").each(function () {
      if (isScrolledIntoView(this)) {
        var query = "li.vertical-menu-element:contains(" + this.textContent + ")";
        var query2 = "a:contains(" + this.textContent + ")";

        $(".vertical-menu-element").css("background", "inherit");
        $("a:contains(Ubezpieczenie)").css("color", "#777");

        $(query).css("background", "#e30a33");
        $(query2).css("color", "white");
      }
    });
  })

  function isScrolledIntoView(elem) {
    var docViewTop = $(window).scrollTop();
    var docViewBottom = docViewTop + 360;

    var elemTop = $(elem).offset().top;
    var elemBottom = elemTop + $(elem).height();

    return ((elemBottom <= docViewBottom) && (elemTop >= docViewTop));
  }
</script>
