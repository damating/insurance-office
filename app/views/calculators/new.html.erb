<div class="contact_page calculate_page">
  <div class="container">
    <h3 class="agileits-title">Kalkulator OC</h3>

    <%= simple_form_for @calculator do |f| %>

        <% if @calculator.errors.any? %>
          <ul>
            <% @calculator.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        <% end %>


        <div class="row">
            <div class="col-md-6 form-group contact-form">
              <%= f.input :contact_name, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Imię i nazwisko', required: true %>
            </div>
            <div class="col-md-6 form-group contact-form">
              <%= f.input :email, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Email', required: true %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group contact-form">
              <%= f.input :pesel, as: :integer, input_html: {class: 'form-control form-form pesel'}, label_html: {class: 'label-contact'}, label: 'Pesel' %>
            </div>
            <div class="col-md-6 form-group contact-form">
              <%= f.input :phone_number, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Telefon kontaktowy' %>
            </div>
        </div>
        <div class="row">

        </div>
        <div class="row">
            <div class="col-md-4 form-group contact-form">
              <%= f.input :brand, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Marka', required: true %>
            </div>
            <div class="col-md-4 form-group contact-form">
              <%= f.input :model, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Model', required: true %>
            </div>
            <div class="col-md-2 form-group contact-form">
              <%= f.input :capacity, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Pojemność', required: true %>
            </div>
            <div class="col-md-2 form-group contact-form">
              <%= f.input :power, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Moc', required: true %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group contact-form">
              <%= f.input :registered_zipcode, input_html: {class: 'form-control form-form zipcode'}, label_html: {class: 'label-contact'}, label: 'Miejsce rejestracji (kod pocztowy)', required: true %>
            </div>
            <div class="col-md-6 form-group contact-form">
              <%= f.input :previous_insurance_company, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Poprzedni zakład ubezpieczeń' %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 form-group contact-form">
              <%= f.input :vin, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'VIN' %>
            </div>
            <div class="col-md-4 form-group contact-form">
              <%= f.input :last_policy_discount, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Zniżki w ostatniej polisie' %>
            </div>
            <div class="col-md-4 form-group contact-form">
              <%= f.input :last_year_damage_amount, input_html: {class: 'form-control form-form'}, label_html: {class: 'label-contact'}, label: 'Ilość szkód w ostatnim roku' %>
            </div>
        </div>

        <div class="form-group contact-form">
          <%= f.button :submit, 'Wyślij wiadomość', class: "btn btn-primary btn-send" %>
        </div>
    <% end %>
  </div>
</div>

<script>
    $(document).ready(function ($) {
        $('.nav li').removeClass('active');
        $('#calculator_menu').addClass('active');

        $('.zipcode').mask('00-000');
        // $('.pesel').mask('00000000000');
    })
</script>

